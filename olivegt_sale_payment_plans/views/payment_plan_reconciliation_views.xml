<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Payment Plan Reconciliation Form View -->
    <record id="payment_plan_reconciliation_view_form" model="ir.ui.view">
        <field name="name">payment.plan.reconciliation.form</field>
        <field name="model">payment.plan.reconciliation</field>
        <field name="arch" type="xml">
            <form>
            <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state != 'confirmed'"/>
                    <button name="action_draft" type="object" string="Reset to Draft" invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="payment_plan_id" readonly="1"/>
                            <field name="payment_plan_line_id" domain="[('payment_plan_id', '=', payment_plan_id)]" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="date" force_save="1" help="This date is automatically set to match the journal entry date" readonly="1"/>
                            <field name="overdue_days" string="Días de mora" readonly="1" invisible="1"/>
                            <field name="interest_amount" widget="monetary" string="Interés por mora" readonly="1" invisible="1"/>
                            <field name="total_with_interest" widget="monetary" string="Total con interés" readonly="1" invisible="1"/>
                            <field name="amount" widget="monetary" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="move_line_id" readonly="1"/>
                            <field name="available_move_line_ids" invisible="1"/>
                            <field name="move_id" readonly="1"/>
                            <field name="move_date" readonly="1"/>
                            <field name="move_payment_reference" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Payment Plan Reconciliation List View -->
    <record id="payment_plan_reconciliation_view_list" model="ir.ui.view">
        <field name="name">payment.plan.reconciliation.list</field>
        <field name="model">payment.plan.reconciliation</field>
        <field name="arch" type="xml">
            <list>
                <field name="payment_plan_id"/>
                <field name="payment_plan_line_id"/>
                <field name="date"/>
                <field name="amount" sum="Total"/>
                <field name="move_id"/>
                <field name="move_date"/>
                <field name="move_payment_reference"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Payment Plan Reconciliation Search View -->
    <record id="payment_plan_reconciliation_view_search" model="ir.ui.view">
        <field name="name">payment.plan.reconciliation.search</field>
        <field name="model">payment.plan.reconciliation</field>
        <field name="arch" type="xml">
            <search>
                <field name="payment_plan_id"/>
                <field name="partner_id"/>
                <field name="move_id"/>
                <field name="move_payment_reference"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Payment Plan" name="group_by_payment_plan" domain="[]" context="{'group_by': 'payment_plan_id'}"/>
                    <filter string="Partner" name="group_by_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter string="Date" name="group_by_date" domain="[]" context="{'group_by': 'date'}"/>
                    <filter string="Journal" name="group_by_journal" domain="[]" context="{'group_by': 'journal_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payment Plan Reconciliation Action Window -->
    <record id="action_payment_plan_reconciliation" model="ir.actions.act_window">
        <field name="name">Payment Reconciliations</field>
        <field name="res_model">payment.plan.reconciliation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new payment plan reconciliation
            </p>
            <p>
                Reconcile bank statement entries with payment plan lines.
            </p>
        </field>
    </record>

    <!-- Menu item -->
    <menuitem id="menu_payment_plan_reconciliation"
        name="Payment Reconciliations"
        parent="menu_payment_plans_root"
        action="action_payment_plan_reconciliation"
        sequence="20"/>
</odoo>
