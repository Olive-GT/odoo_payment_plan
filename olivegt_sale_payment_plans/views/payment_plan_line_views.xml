<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>    <!-- Payment Plan Line List View -->    <record id="view_payment_plan_line_list" model="ir.ui.view">
        <field name="name">payment.plan.line.list</field>
        <field name="model">payment.plan.line</field>
        <field name="arch" type="xml">            <tree editable="bottom">                <field name="date"/>
                <field name="name"/>
                <field name="amount" widget="monetary" sum="Total"/>
                <field name="allocated_amount" widget="monetary" sum="Total Asignado"/>                <field name="allocation_state"/>
                <field name="allocation_summary" string="Asignaciones"/>
                <field name="allocation_count" invisible="1"/>
                <button name="action_show_allocations" type="object" 
                        string="Ver Detalles" icon="fa-list" class="btn btn-link" optional="show"
                        attrs="{'invisible': [('allocation_count', '=', 0)]}"/>
                <field name="running_balance" widget="monetary"/>
                <field name="overdue_days"/>
                <field name="interest_amount" widget="monetary"/>
                <field name="total_with_interest" widget="monetary"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="paid"/>
                <field name="payment_date"/>
                <field name="payment_reference"/>
                
                <field name="state" widget="badge" 
                       decoration-success="state == 'paid'" 
                       decoration-info="state == 'allocated'" 
                       decoration-warning="state == 'partial'"
                       decoration-danger="state == 'overdue'"/>
                
                <button name="action_reconcile" type="object" string="Reconcile" title="Reconcile Payment" 
                        class="btn btn-primary btn-sm" column_invisible="paid"/>
                
                <button name="mark_as_paid" type="object" string="" title="Mark as Paid" 
                        icon="fa-check" column_invisible="paid" class="btn-sm"/>
                
                <button name="mark_as_unpaid" type="object" string="" title="Mark as Unpaid" 
                        icon="fa-times" column_invisible="not paid" class="btn-sm"/>
                
                <button name="update_overdue_status" type="object" string="" title="Update Status" 
                        icon="fa-refresh" column_invisible="paid" class="btn-sm"/>
            </list>
        </field>
    </record>
      <!-- Payment Plan Line Form View -->
    <record id="view_payment_plan_line_form" model="ir.ui.view">
        <field name="name">payment.plan.line.form</field>
        <field name="model">payment.plan.line</field>
        <field name="arch" type="xml">
            <form>                <header>
                    <button name="action_reconcile" type="object" string="Reconcile" 
                            class="btn-primary" 
                            invisible="paid == True"/>
                    <button name="action_view_reconciliations" type="object" string="View Allocations" 
                            class="btn-secondary" 
                            invisible="allocation_count == 0"/>
                    <button name="mark_as_paid" type="object" string="Mark as Paid" 
                            invisible="paid == True"/>
                    <button name="mark_as_unpaid" type="object" string="Mark as Unpaid" 
                            invisible="paid == False"/>
                    <button name="update_overdue_status" type="object" string="Update Status" 
                            invisible="paid == True"/>
                </header>
                <sheet>                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_reconciliations" type="object" class="oe_stat_button" icon="fa-money"
                                invisible="allocation_count == 0">
                            <field name="allocation_count" widget="statinfo" string="Allocations"/>
                        </button>
                    </div>
                    <group>
                        <group>                        <field name="payment_plan_id"/>
                            <field name="date"/>
                            <field name="name"/>
                            <field name="amount" widget="monetary"/>
                            <field name="allocated_amount" widget="monetary"/>
                            <field name="allocation_state" widget="badge" 
                                   decoration-success="allocation_state == 'full'" 
                                   decoration-info="allocation_state == 'partial'" 
                                   decoration-danger="allocation_state == 'none'"/>
                            <field name="running_balance" widget="monetary"/>
                            <field name="currency_id" column_invisible="True"/>
                        </group>                        <group>                        <field name="overdue_days" optional="hide" column_invisible="overdue_days == 0"/>
                            <field name="interest_amount" optional="hide" column_invisible="interest_amount == 0" widget="monetary"/>
                            <field name="total_with_interest" widget="monetary"/>
                            <field name="paid"/>
                            <field name="payment_date"/>
                            <field name="payment_reference"/>
                        </group>
                    </group>                    <notebook column_invisible="allocation_count == 0">
                        <page string="Allocations">
                            <field name="reconciliation_ids" domain="[('state', '=', 'confirmed')]" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>        </field>    </record>

    <!-- Inline reconciliations tree view -->    <record id="view_payment_plan_reconciliation_inline_tree" model="ir.ui.view">
        <field name="name">payment.plan.reconciliation.inline.tree</field>
        <field name="model">payment.plan.reconciliation</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="move_id"/>
                <field name="journal_id"/>
                <field name="amount" sum="Total"/>
                <field name="move_payment_reference"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-success="state == 'confirmed'" 
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Detailed reconciliation tree view for popup -->    <record id="view_payment_plan_reconciliation_detailed_tree" model="ir.ui.view">
        <field name="name">payment.plan.reconciliation.detailed.tree</field>
        <field name="model">payment.plan.reconciliation</field>
        <field name="arch" type="xml">            <tree create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="move_id"/>
                <field name="journal_id"/>
                <field name="amount" widget="monetary" sum="Total"/>
                <field name="currency_id" options="{'no_create': True}"/>
                <field name="move_payment_reference"/>
                <field name="move_date"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-success="state == 'confirmed'" 
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>
</data>
</odoo>
