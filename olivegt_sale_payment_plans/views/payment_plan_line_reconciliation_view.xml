<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Payment Plan Line Reconciliation View -->
    <record id="payment_plan_line_reconciliation_view_form" model="ir.ui.view">
        <field name="name">payment.plan.line.reconciliation.form</field>
        <field name="model">payment.plan.line</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Payment Reconciliation" create="0" edit="0">
                <header>
                    <button name="action_reconcile" type="object" string="Add Reconciliation" 
                            class="oe_highlight" attrs="{'invisible': [('paid', '=', True)]}"/>
                    <field name="paid" widget="statusbar" statusbar_visible="false,true"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="payment_plan_id"/> - 
                            <field name="name" placeholder="Payment"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="payment_date" readonly="0"/>
                            <field name="payment_reference" readonly="0"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary"/>
                            <field name="allocated_amount" widget="monetary"/>
                            <field name="allocation_count" widget="statinfo" string="Allocations"/>
                            <field name="allocation_state" widget="badge" 
                                decoration-info="allocation_state == 'partial'" 
                                decoration-success="allocation_state == 'full'" 
                                decoration-warning="allocation_state == 'none'"/>
                        </group>
                    </group>
                    
                    <notebook>                        <page string="Reconciliations" name="reconciliations">
                            <field name="reconciliation_ids" widget="one2many" mode="tree" 
                                   context="{'default_payment_plan_id': payment_plan_id, 'default_payment_plan_line_id': id}">
                                <tree decoration-info="state == 'draft'" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'">
                                    <field name="date"/>
                                    <field name="amount" sum="Total" widget="monetary"/>
                                    <field name="move_line_id"/>
                                    <field name="state"/>
                                    <field name="currency_id" invisible="1"/>
                                    <button name="action_confirm" string="Confirm" type="object" icon="fa-check-circle" class="text-success" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                    <button name="action_cancel" string="Cancel" type="object" icon="fa-times-circle" class="text-danger" attrs="{'invisible': [('state', '=', 'cancelled')]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Interest Information" name="interest">
                            <group>
                                <field name="overdue_days"/>
                                <field name="interest_amount" widget="monetary"/>
                                <field name="total_with_interest" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action for showing reconciliation details -->
    <record id="action_payment_plan_line_reconciliation" model="ir.actions.act_window">
        <field name="name">Payment Reconciliation</field>
        <field name="res_model">payment.plan.line</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payment_plan_line_reconciliation_view_form"/>
        <field name="target">current</field>
    </record>
</odoo>
