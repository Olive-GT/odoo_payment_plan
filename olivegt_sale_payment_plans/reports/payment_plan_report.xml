<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="action_report_payment_plan" model="ir.actions.report">
            <field name="name">Payment Plan</field>
            <field name="model">payment.plan</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">olivegt_sale_payment_plans.report_payment_plan</field>
            <field name="report_file">olivegt_sale_payment_plans.report_payment_plan</field>
            <field name="binding_model_id" ref="model_payment_plan"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_payment_plan">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-size: 10px; line-height: 1.2;">
                            <!-- Header Section -->
                            <div class="oe_structure"/>
                            <div style="text-align: center; margin-bottom: 10px;">
                                <h4 style="margin: 0; font-weight: 600;">ESTADO DE CUENTA</h4>
                                <p style="margin: 0;">Plan de Pagos: <span t-field="o.name"/></p>
                            </div>
                            
                            <!-- Summary Section - Using a simple table -->
                            <table class="table table-sm" style="border: 1px solid #ddd; margin-bottom: 10px; font-size: 10px;">
                                <tr>
                                    <td style="width: 15%; padding: 2px; font-weight: 500;">Cliente:</td>
                                    <td style="width: 35%; padding: 2px;"><span t-field="o.partner_id"/></td>
                                    <td style="width: 25%; padding: 2px; font-weight: 500;">Precio Inmueble:</td>
                                    <td style="width: 25%; padding: 2px; text-align: right;"><span t-field="o.sale_id.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                                <tr>
                                    <td style="padding: 2px; font-weight: 500;">Orden de Venta:</td>
                                    <td style="padding: 2px;"><span t-field="o.sale_id.name"/></td>
                                    <td style="padding: 2px; font-weight: 500;">Monto Total Plan de Pago:</td>
                                    <td style="padding: 2px; text-align: right;"><span t-field="o.total_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                                <tr>
                                    <td style="padding: 2px; font-weight: 500;">Fecha:</td>
                                    <td style="padding: 2px;"><span t-field="o.date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                                    <td style="padding: 2px; font-weight: 500;">Monto Pagado:</td>
                                    <td style="padding: 2px; text-align: right;"><span t-field="o.amount_paid" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                                <tr>
                                    <td style="padding: 2px; font-weight: 500;">Estado:</td>
                                    <td style="padding: 2px;">
                                        <t t-if="o.state == 'draft'">Borrador</t>
                                        <t t-elif="o.state == 'posted'"><span style="color: #28a745;">Publicado</span></t>
                                        <t t-elif="o.state == 'canceled'"><span style="color: #dc3545;">Cancelado</span></t>
                                    </td>
                                    <td style="padding: 2px; font-weight: 500;">Saldo Pendiente:</td>
                                    <td style="padding: 2px; text-align: right; color: #dc3545; font-weight: 500;"><span t-field="o.amount_residual" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                            </table>
                            
                            <!-- Payment Plan Table -->
                            <p style="margin: 5px 0; font-weight: 600;">DETALLE DE CUOTAS</p>
                            <table class="table" style="font-size: 10px; margin-bottom: 5px; border: 1px solid #ddd;">
                                <thead>
                                    <tr style="background-color: #f2f2f2;">
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">CUOTA</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">FECHA PROGRAMADA</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">MONTO PROGRAMADO</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">FECHA DE PAGO</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">ABONO</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">SALDO</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">D√çAS EN MORA</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">INTERESES</th>
                                        <th style="padding: 2px; text-align: center; border: 1px solid #ddd; font-weight: 500;">REFERENCIA DE PAGO</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.line_ids.sorted(key=lambda l: l.date)" t-as="line">
                                        <t t-set="line_index" t-value="line_index + 1"/>
                                        <t t-set="line_style" t-value="''"/>
                                        <t t-set="text_color" t-value="''"/>
                                        <t t-if="line.paid">
                                            <t t-set="line_style" t-value="'background-color: #d4edda;'"/>
                                        </t>
                                        <t t-elif="line.overdue_days > 0">
                                            <t t-set="line_style" t-value="'background-color: #f8d7da;'"/>
                                        </t>
                                        <tr t-att-style="line_style">
                                            <td style="padding: 2px; text-align: center; border: 1px solid #ddd;" t-att-style="text_color">
                                                <t t-if="line.name">
                                                    <span t-field="line.name"/>
                                                </t>
                                                <t t-else="">
                                                    Installment <t t-esc="line_index"/>
                                                </t>
                                            </td>
                                            <td style="padding: 2px; text-align: center; border: 1px solid #ddd;" t-att-style="text_color">
                                                <span t-field="line.date" t-options='{"format": "dd/MM/yyyy"}'/>
                                            </td>
                                            <td style="padding: 2px; text-align: right; border: 1px solid #ddd;" t-att-style="text_color">
                                                <span t-field="line.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td style="padding: 2px; text-align: center; border: 1px solid #ddd;" t-att-style="text_color">
                                                <span t-field="line.payment_date" t-options='{"format": "dd/MM/yyyy"}'/>
                                            </td>
                                            <td style="padding: 2px; text-align: right; border: 1px solid #ddd;" t-att-style="text_color">
                                                <span t-if="line.paid" t-field="line.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                <span t-else="" t-esc="''" />
                                            </td>
                                            <td style="padding: 2px; text-align: right; border: 1px solid #ddd;" t-att-style="text_color">
                                                <t t-if="line.paid">
                                                    <span t-esc="0.0" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </t>
                                                <t t-else="">
                                                    <span t-field="line.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </t>
                                            </td>
                                            <td style="padding: 2px; text-align: center; border: 1px solid #ddd;" t-att-style="text_color">
                                                <t t-if="line.overdue_days > 0">
                                                    <span t-field="line.overdue_days" />
                                                </t>
                                            </td>
                                            <td style="padding: 2px; text-align: right; border: 1px solid #ddd;" t-att-style="text_color">
                                                <t t-if="line.interest_amount > 0">
                                                    <span t-field="line.interest_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </t>
                                            </td>
                                            <td style="padding: 2px; border: 1px solid #ddd; font-size: 9px;" t-att-style="text_color">
                                                <!-- Payment references in the same line -->
                                                <t t-if="line.reconciliation_ids.filtered(lambda r: r.state == 'confirmed')">
                                                    <t t-foreach="line.reconciliation_ids.filtered(lambda r: r.state == 'confirmed')" t-as="rec">
                                                        <div style="margin-bottom: 2px;">
                                                            <span t-field="rec.date" t-options='{"format": "dd/MM/yy"}'/>:
                                                            <t t-if="rec.move_payment_reference">
                                                                <span t-field="rec.move_payment_reference"/>
                                                            </t>
                                                            <t t-else="">
                                                                <span t-field="rec.move_id.name"/>
                                                            </t>
                                                            (<span t-field="rec.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>)
                                                        </div>
                                                    </t>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr style="background-color: #f2f2f2; font-weight: 500;">
                                        <td colspan="2" style="text-align: right; padding: 2px; border: 1px solid #ddd;">Totales:</td>
                                        <td style="text-align: right; padding: 2px; border: 1px solid #ddd;">
                                            <span t-field="o.total_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td style="border: 1px solid #ddd;"></td>
                                        <td style="text-align: right; padding: 2px; border: 1px solid #ddd;">
                                            <span t-field="o.amount_paid" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td style="text-align: right; padding: 2px; border: 1px solid #ddd;">
                                            <span t-field="o.amount_residual" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td style="border: 1px solid #ddd;"></td>
                                        <td style="text-align: right; padding: 2px; border: 1px solid #ddd;">
                                            <span t-field="o.total_interest" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td style="border: 1px solid #ddd;"></td>
                                    </tr>
                                </tfoot>
                            </table>
                            
                            <!-- Notes Section if available -->
                            <t t-if="o.notes">
                                <p style="margin-top: 10px; margin-bottom: 2px; font-weight: 500;">NOTAS:</p>
                                <p style="font-size: 9px; margin-bottom: 10px;" t-field="o.notes"/>
                            </t>
                            
                            <!-- Footer Information -->
                            <div style="text-align: center; margin-top: 10px; font-size: 9px; color: #6c757d;">
                                <p style="margin: 0;">Este documento es un estado de cuenta informativo y no representa una factura o comprobante fiscal.</p>
                                <p style="margin: 0;">P√°gina 1/1</p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>