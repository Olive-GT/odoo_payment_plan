<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_payment_plan">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <style>
                            .clean-table th, .clean-table td {
                                padding: 3px 5px;
                                border: 0.5px solid #ccc;
                                font-size: 8px;
                                vertical-align: middle;
                            }
                            .clean-table th {
                                font-weight: 600;
                                color: #333;
                                text-transform: uppercase;
                            }
                            .badge {
                                display: inline-block;
                                padding: 1px 5px;
                                border-radius: 4px;
                                font-weight: 600;
                                font-size: 7px;
                                border: 0.5px solid;
                            }
                            .badge-paid { border-color: #28a745; color: #28a745; }
                            .badge-overdue { border-color: #dc3545; color: #dc3545; }
                            .badge-draft { border-color: #6c757d; color: #6c757d; }
                            .table-rounded {
                                border-collapse: separate;
                                border-spacing: 0;
                                border-radius: 6px;
                                overflow: hidden;
                            }
                            .text-right { text-align: right; }
                            .text-center { text-align: center; }
                            .totals-row td {
                                font-weight: 600;
                                background-color: #f9f9f9;
                            }
                            .text-muted { color: #888; font-size: 7px; }
                        </style>

                        <div class="page" style="font-size: 8px; line-height: 1.2;">

                            <!-- Encabezado -->
                            <div style="text-align: center; margin-bottom: 8px;">
                                <h5 style="margin: 0; font-size: 11px;">ESTADO DE CUENTA</h5>
                                <p style="margin: 0; font-size: 8px;">Plan de Pagos: <span t-field="o.name"/></p>
                            </div>

                            <!-- Resumen -->
                            <table class="clean-table" style="margin-bottom: 8px; width: 100%;">
                                <tr>
                                    <td><strong>Cliente:</strong></td>
                                    <td><span t-field="o.partner_id"/></td>
                                    <td><strong>Precio Inmueble:</strong></td>
                                    <td class="text-right"><span t-field="o.sale_id.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                                <tr>
                                    <td><strong>Orden de Venta:</strong></td>
                                    <td><span t-field="o.sale_id.name"/></td>
                                    <td><strong>Monto Total Plan de Pago:</strong></td>
                                    <td class="text-right"><span t-field="o.total_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                                <tr>
                                    <td><strong>Fecha:</strong></td>
                                    <td><span t-field="o.date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                                    <td><strong>Monto Pagado:</strong></td>
                                    <td class="text-right"><span t-field="o.amount_paid" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                                <tr>
                                    <td><strong>Estado:</strong></td>
                                    <td>
                                        <t t-if="o.state == 'draft'"><span class="badge badge-draft">Borrador</span></t>
                                        <t t-elif="o.state == 'posted'"><span class="badge badge-paid">Publicado</span></t>
                                        <t t-elif="o.state == 'canceled'"><span class="badge badge-overdue">Cancelado</span></t>
                                    </td>
                                    <td><strong>Saldo Pendiente:</strong></td>
                                    <td class="text-right"><span t-field="o.amount_residual" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                            </table>

                            <!-- Detalle de cuotas -->
                            <p style="margin: 4px 0; font-weight: 600; font-size: 8px;">DETALLE DE CUOTAS</p>
                            <table class="clean-table table-rounded" style="width: 100%; margin-bottom: 5px;">
                                <thead>
                                    <tr>
                                        <th class="text-center">Cuota</th>
                                        <th class="text-center">Fecha Programada</th>
                                        <th class="text-center">Monto</th>
                                        <th class="text-center">Fecha Pago</th>
                                        <th class="text-center">Abono</th>
                                        <th class="text-center">Saldo</th>
                                        <th class="text-center">Días Mora</th>
                                        <th class="text-center">Interés</th>
                                        <th class="text-center">Referencias</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="line_index" t-value="0"/>
                                    <t t-foreach="o.line_ids.sorted(key=lambda l: l.date)" t-as="line">
                                        <t t-set="line_index" t-value="line_index + 1"/>
                                        <tr>
                                            <td class="text-center">
                                                <t t-if="line.name">
                                                    <span t-field="line.name"/>
                                                </t>
                                                <t t-else="">Cuota <t t-esc="line_index"/></t>
                                            </td>
                                            <td class="text-center"><span t-field="line.date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                                            <td class="text-right"><span t-field="line.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                            <td class="text-center"><span t-field="line.payment_date" t-options='{"format": "dd/MM/yyyy"}'/></td>
                                            <td class="text-right">
                                                <t t-if="line.paid"><span t-field="line.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></t>
                                            </td>
                                            <td class="text-right">
                                                <t t-if="line.paid">0.00</t>
                                                <t t-else=""><span t-field="line.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></t>
                                            </td>
                                            <td class="text-center">
                                                <t t-if="line.overdue_days &gt; 0"><span t-esc="line.overdue_days"/></t>
                                            </td>
                                            <td class="text-right">
                                                <t t-if="line.interest_amount &gt; 0"><span t-field="line.interest_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></t>
                                            </td>
                                            <td>
                                                <t t-if="line.reconciliation_ids.filtered(lambda r: r.state == 'confirmed')">
                                                    <t t-foreach="line.reconciliation_ids.filtered(lambda r: r.state == 'confirmed')" t-as="rec">
                                                        <div style="font-size: 7px;">
                                                            <span t-field="rec.date" t-options='{"format": "dd/MM/yy"}'/> –
                                                            <span t-field="rec.move_payment_reference"/>:
                                                            <span t-field="rec.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                        </div>
                                                    </t>
                                                </t>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr class="totals-row">
                                        <td colspan="2" class="text-right">Totales:</td>
                                        <td class="text-right"><span t-field="o.total_amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        <td></td>
                                        <td class="text-right"><span t-field="o.amount_paid" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        <td class="text-right"><span t-field="o.amount_residual" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        <td></td>
                                        <td class="text-right"><span t-field="o.total_interest" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>

                            <!-- Notas -->
                            <t t-if="o.notes">
                                <p style="font-weight: 600; font-size: 8px;">Notas:</p>
                                <p style="font-size: 7px;" t-field="o.notes"/>
                            </t>

                            <!-- Footer -->
                            <div style="text-align: center; font-size: 7px; color: #888; margin-top: 8px;">
                                <p>Este documento es un estado de cuenta informativo y no representa una factura o comprobante fiscal.</p>
                                <p>Página 1/1</p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
