<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_payment_plan_reconciliation_receipt" model="mail.template">
            <field name="name">Payment Plan Reconciliation Receipt</field>
            <field name="model_id" ref="model_payment_plan_reconciliation"/>
            <field name="subject">Recibo de pago ${object.payment_plan_id.name or ''}</field>
            <field name="email_from">${(object.company_id.email or user.email) or ''}</field>
            <field name="email_to">${object.partner_id.email or ''}</field>
            <field name="body_html" type="html"><![CDATA[
<p>Hola ${object.partner_id.name or ''},</p>
<p>Adjuntamos el recibo de pago correspondiente a la conciliaci√≥n realizada el ${format_date(object.date)}.</p>
<ul>
    <li><strong>Plan:</strong> ${object.payment_plan_id.name or ''}</li>
    <li><strong>Cuota:</strong> ${object.payment_plan_line_id.name or ''}</li>
    <li><strong>Monto:</strong> ${format_amount(object.amount, object.currency_id)}</li>
    <li><strong>Referencia:</strong> ${object.move_payment_reference or object.move_id.name or ''}</li>
</ul>
<p>Gracias.</p>
            ]]></field>
            <field name="report_template" ref="olivegt_sale_payment_plans.action_report_payment_plan_reconciliation_receipt"/>
            <field name="report_name">Recibo_${(object.payment_plan_id.name or 'recibo').replace('/', '_')}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
